<!--pages/detail/detail.wxml-->
<view class="slider">
    <swiper autoplay interval="3000" duration="400" indicator-dots="{{true}}">
        <swiper-item>
            <image src="/assets/images/banner-01.png" lazy-load mode="aspectFill"></image>
        </swiper-item>
    </swiper>  
</view>
<view class="divider"></view>
<view class="cell">
    <navigator class="cell-item arrow">
        <text class="shop-title">商品名称：小辣椒手机</text>
    </navigator>
    <navigator class="cell-item arrow">
        <text>价格</text>
        <view class="priceInfo">
            <text class="oldprice">市场价：1999.99</text>
            <text class="newprice">销售价：1111.11</text>
        </view>
    </navigator>
    <view class="cell-item arrow">
        <text class="shop-title">数量</text>
        <view class="tui-number-group">
            <button class="tui-number-cell" bindtap="subNum">-</button>
            <input class="tui-number-cell" type="number" value="{{number}}"></input>
            <button class="tui-number-cell"  bindtap="addNum">+</button>
        </view>
    </view>
</view>
<view class="divider"></view>
<view class="cell">
    <navigator class="cell-item arrow">
        <text> 使用条款</text>
        <text>轻拿轻放，不能与地面接触</text>
    </navigator>
</view>
<view class="divider"></view>
<view class="cell-item arrow">
    <button class="addCart">加入购物车</button>
    <button class="addOrder">立即购买</button>
</view>